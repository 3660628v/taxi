<?xml version='1.0' encoding='utf-8'?>
<widget id="uk.co.wapartynetworks.taxi" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="SplashScreen">
        <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <name>Taxi</name>
    <description>
        Apache Cordova based taxi meter that is deployable to both iOS and Android
    </description>
    <author email="waparty@gmail.com" href="http://wapartynetworks.co.uk">
        Waparty Networks Ltd
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="splashscreen" value="screen" />
    <preference name="Fullscreen" value="true" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Orientation" value="portrait" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="BackupWebStorage" value="false" />
    <preference name="ShowSplashScreenSpinner" value="false" />
</widget>
